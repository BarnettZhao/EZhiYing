<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="vertical">

	<View style="@style/person_split_match"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:orientation="horizontal"
		android:paddingLeft="12dp"
		android:paddingRight="12dp">

		<TextView
			android:id="@+id/address_item_username"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/primary_color_text"
			android:textSize="14sp"/>

		<TextView
			android:id="@+id/address_item_phone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:textColor="@color/primary_color_text"
			android:textSize="14sp"/>
	</LinearLayout>

	<TextView
		android:id="@+id/address_item_address"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="18dp"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:textColor="@color/middle_gray"
		android:textSize="14sp"/>

	<View
		style="@style/person_split_margin_left_right"
		android:layout_marginTop="20dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="12dp"
		android:paddingRight="12dp">

		<TextView
			android:id="@+id/address_item_default"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableLeft="@drawable/list_check_normal"
			android:drawablePadding="5dp"
			android:text="@string/person_address_default"
			android:textColor="@color/primary_color_text"
			android:textSize="14sp"/>

		<TextView
			android:id="@+id/address_item_edit"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:drawableLeft="@drawable/list_edit_icon"
			android:drawablePadding="5dp"
			android:text="@string/person_address_fix"
			android:gravity="center"
			android:textColor="@color/primary_color_text"
			android:textSize="14sp"/>
	</LinearLayout>

	<View style="@style/person_split_match"/>

	<View
		android:id="@+id/address_item_divider"
		android:layout_width="match_parent"
		android:layout_height="10dp"
		android:background="@color/common_bg"/>
</LinearLayout>