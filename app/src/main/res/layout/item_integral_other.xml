<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingBottom="5dp"
    android:paddingEnd="12dp"
    android:paddingStart="12dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/integral_other_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/middle_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/integral_other_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/middle_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/integral_other_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/integral_other_order_number"
        android:layout_marginTop="6dp"
        android:textColor="@color/middle_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/integral_other_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/integral_other_order_number"
        android:layout_marginTop="6dp"
        android:textColor="@color/text_introduce_color"
        android:textSize="12sp" />
</RelativeLayout>