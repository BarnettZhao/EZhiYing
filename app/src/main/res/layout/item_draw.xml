<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ll_item_draw"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingStart="12dp"
              android:paddingEnd="12dp"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:background="@color/white">

	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/sdv_item_draw_pic"
		android:layout_width="100dp"
		android:layout_height="100dp"
		fresco:actualImageScaleType="fitCenter"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingStart="10dp"
		android:paddingEnd="0dp">

		<TextView
			android:id="@+id/tv_item_draw_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="5dp"
			android:paddingBottom="8dp"
			android:textSize="15sp"
			android:textColor="@color/middle_gray"/>

		<TextView
			android:id="@+id/tv_item_draw_price"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="8dp"
			android:textSize="13sp"
			android:textColor="@color/bindindo_text"/>

		<TextView
			android:id="@+id/tv_item_draw_num"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="8dp"
			android:textSize="13sp"
			android:textColor="@color/bindindo_text"/>

		<TextView
			android:id="@+id/tv_item_draw_all"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="13sp"
			android:textColor="@color/bindindo_text"/>
	</LinearLayout>
</LinearLayout>