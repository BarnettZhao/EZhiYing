<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@color/white">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:gravity="center_vertical"
			android:paddingStart="12dp"
			android:paddingEnd="12dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/available_integral"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>

			<TextView
				android:id="@+id/tv_sale_integral_available"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="end"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>
		</LinearLayout>

		<View style="@style/person_split_match"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:gravity="center_vertical"
			android:paddingStart="12dp"
			android:paddingEnd="12dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/sell_integral"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>

			<EditText
				android:id="@+id/et_sale_integral_num"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="end"
				android:textColorHint="@color/edit_introduce_color"
				android:paddingStart="20dp"
				android:paddingEnd="0dp"
				android:maxLines="1"
				android:inputType="number"
				android:background="@null"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>
		</LinearLayout>

		<View style="@style/person_split_match"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:gravity="center_vertical"
			android:paddingStart="12dp"
			android:paddingEnd="12dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/dialog_integral_sale_price"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>

			<EditText
				android:id="@+id/et_sale_integral_price"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="end"
				android:textColorHint="@color/edit_introduce_color"
				android:paddingStart="20dp"
				android:paddingEnd="0dp"
				android:maxLines="1"
				android:inputType="number"
				android:background="@null"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>
		</LinearLayout>
	</LinearLayout>

	<TextView
		android:id="@+id/tv_sale_integral_sell"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:background="@color/primary_color"
		android:layout_gravity="bottom"
		android:gravity="center"
		android:text="@string/dialog_integral_sale_integral"
		android:textSize="16sp"
		android:textColor="@color/white"/>
</FrameLayout>