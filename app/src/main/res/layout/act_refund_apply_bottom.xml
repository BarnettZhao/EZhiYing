<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<View style="@style/person_split_match"/>

	<TextView
		android:id="@+id/order_refund_goods_price"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:gravity="end"
		android:paddingEnd="12dp"
		android:paddingStart="12dp"
		android:paddingTop="6dp"
		android:textColor="@color/middle_gray"
		android:textSize="12sp"/>

	<TextView
		android:id="@+id/order_refund_freight"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:gravity="end"
		android:paddingBottom="8dp"
		android:paddingEnd="12dp"
		android:paddingStart="12dp"
		android:paddingTop="5dp"
		android:textColor="@color/middle_gray"
		android:textSize="12sp"/>

	<View style="@style/person_split_match"/>

	<View
		style="@style/person_split_match"
		android:layout_marginTop="10dp"/>

	<LinearLayout
		android:id="@+id/order_refund_refund_ll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:orientation="vertical"
		android:paddingEnd="12dp"
		android:paddingStart="12dp"
		android:visibility="visible">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:text="@string/person_order_refund_reason"
				android:textColor="@color/middle_gray"/>

			<TextView
				android:id="@+id/order_refund_refund_reason"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:drawableEnd="@drawable/list_more"
				android:drawablePadding="5dp"
				android:gravity="center_vertical|end"
				android:textColor="@color/middle_gray"/>

		</LinearLayout>

		<View style="@style/person_split_match"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:orientation="horizontal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:text="@string/person_order_refund_explain"
				android:textColor="@color/middle_gray"/>

			<EditText
				android:id="@+id/order_refund_refund_explain"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:layout_marginStart="10dp"
				android:background="@null"
				android:hint="@string/person_order_refund_hint"
				android:gravity="center_vertical"
				android:textColor="@color/middle_gray"
				android:textSize="14sp"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>