<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="75dp"
		android:src="@drawable/store_apply"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="102dp"
		android:gravity="center">

		<TextView
			android:id="@+id/store_apply_company"
			android:layout_width="150dp"
			android:layout_height="44dp"
			android:background="@drawable/ic_tran_button"
			android:gravity="center"
			android:text="@string/store_company"
			android:textColor="@color/middle_gray"
			android:textSize="15sp"/>

		<TextView
			android:id="@+id/store_apply_business"
			android:layout_width="150dp"
			android:layout_height="44dp"
			android:layout_marginStart="20dp"
			android:layout_toEndOf="@+id/store_apply_company"
			android:background="@drawable/ic_tran_button"
			android:gravity="center"
			android:text="@string/store_business"
			android:textColor="@color/middle_gray"
			android:textSize="15sp"/>

		<TextView
			android:id="@+id/store_apply_personnal"
			android:layout_width="150dp"
			android:layout_height="44dp"
			android:layout_below="@+id/store_apply_company"
			android:layout_marginTop="15dp"
			android:background="@drawable/ic_tran_button"
			android:gravity="center"
			android:text="@string/store_personal"
			android:textColor="@color/middle_gray"
			android:textSize="15sp"/>

		<TextView
			android:id="@+id/store_apply_entity"
			android:layout_width="150dp"
			android:layout_height="44dp"
			android:layout_below="@+id/store_apply_business"
			android:layout_marginStart="20dp"
			android:layout_marginTop="15dp"
			android:layout_toEndOf="@+id/store_apply_personnal"
			android:background="@drawable/ic_tran_button"
			android:gravity="center"
			android:text="@string/store_entity"
			android:textColor="@color/middle_gray"
			android:textSize="15sp"/>
	</RelativeLayout>
</RelativeLayout>