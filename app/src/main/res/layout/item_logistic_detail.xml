<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal"
              android:padding="0dp">

	<LinearLayout
		android:layout_width="40dp"
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:padding="0dp">

		<View
			android:id="@+id/item_logistic_view1"
			android:layout_width="1dp"
			android:layout_height="20dp"
			android:layout_gravity="center_horizontal"
			android:background="@color/spilt_line"/>

		<ImageView
			android:id="@+id/item_logistic_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:src="@drawable/logistics_gray"/>

		<View
			android:id="@+id/item_logistic_view2"
			android:layout_width="1dp"
			android:layout_height="0dp"
			android:layout_gravity="center_horizontal"
			android:layout_weight="1"
			android:background="@color/spilt_line"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingTop="20dp"
		android:paddingRight="12dp">

		<TextView
			android:id="@+id/item_logistic_describe"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/primary_color"
			android:textSize="13sp"/>

		<TextView
			android:id="@+id/item_logistic_time"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="14dp"
			android:textColor="@color/primary_color"
			android:textSize="13sp"/>

		<View
			style="@style/person_split_match"
			android:layout_marginTop="20dp"/>
	</LinearLayout>

</LinearLayout>