<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="@color/white"
              android:paddingStart="12dp"
              android:paddingEnd="12dp"
              android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<TextView
			android:id="@+id/tv_sale_integral"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="10dp"
			android:textSize="13sp"
			android:textColor="@color/middle_gray"/>

		<TextView
			android:id="@+id/tv_sale_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_sale_integral"
			android:paddingTop="7dp"
			android:textSize="10sp"
			android:textColor="@color/text_introduce_color"/>

		<TextView
			android:id="@+id/tv_sale_cancel"
			android:layout_width="100dp"
			android:layout_height="30dp"
			android:layout_alignParentEnd="true"
			android:gravity="center"
			android:layout_centerVertical="true"
			android:text="@string/revoke"
			android:background="@drawable/btn_black_border"/>

		<View
			android:id="@+id/v_sale_split"
			android:layout_width="1px"
			android:layout_height="44dp"
			android:background="@color/spilt_line"
			android:layout_marginStart="15dp"
			android:layout_marginEnd="15dp"
			android:layout_centerVertical="true"
			android:layout_toStartOf="@id/tv_sale_cancel"/>

		<TextView
			android:id="@+id/tv_sale_price"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toStartOf="@id/v_sale_split"
			android:layout_centerVertical="true"
			android:textSize="13sp"
			android:textColor="@color/middle_gray"/>
	</RelativeLayout>

	<View style="@style/person_split_match"/>
</LinearLayout>