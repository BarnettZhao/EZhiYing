<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<com.common.widget.RefreshRecyclerView
		android:id="@+id/rrv_shop_car_list"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

	<View style="@style/person_split_match"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:paddingStart="12dp"
		android:paddingEnd="0dp"
		android:background="@color/white">

		<CheckBox
			android:id="@+id/cb_shop_car_all"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="@string/select_all"/>

		<Space
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"/>

		<LinearLayout
			android:id="@+id/ll_shop_car_total"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:paddingStart="5dp"
			android:paddingEnd="5dp"
			android:gravity="center_vertical">

			<TextView
				android:id="@+id/tv_shop_car_amount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="18sp"
				android:textColor="@color/middle_gray"/>

			<TextView
				android:id="@+id/tv_shop_car_postage"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="不含邮费"
				android:textSize="14sp"
				android:textColor="@color/bindindo_text"/>
		</LinearLayout>

		<TextView
			android:id="@+id/tv_shop_car_pay"
			android:text="去结算"
			style="@style/GreenBtn"/>

		<TextView
			android:id="@+id/tv_shop_car_delete"
			android:text="@string/delete"
			android:visibility="gone"
			style="@style/GreenBtn"/>
	</LinearLayout>
</LinearLayout>