<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingEnd="12dp"
        android:paddingStart="12dp">

        <LinearLayout
            android:id="@+id/integral_useable_ll"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/person_useable_integral"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/integral_useable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/list_more"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|end"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/person_split_match"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/integral_shop_ll"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/integral_shop"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/integral_shop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/list_more"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|end"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/person_split_match" />

        <LinearLayout
            android:id="@+id/integral_aside_ll"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/integral_aside"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/integral_aside"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/list_more"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|end"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/person_split_match" />

        <LinearLayout
            android:id="@+id/integral_multi_function_ll"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/integral_multi_function"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/integral_multi_function"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/list_more"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|end"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/person_split_match" />

        <LinearLayout
            android:id="@+id/integral_share_ll"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/integral_share"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/integral_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/list_more"
                android:drawablePadding="5dp"
                android:gravity="center_vertical|end"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/integral_give"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_color"
        android:gravity="center"
        android:text="@string/integral_give_apply"
        android:textColor="@color/white"
        android:textSize="17sp" />
</RelativeLayout>