<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:fresco="http://schemas.android.com/apk/res-auto"
	android:background="@color/white"
	android:paddingEnd="12dp"
	android:paddingStart="12dp"
	android:orientation="vertical">

	<View style="@style/person_split_match"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingBottom="10dp"
		android:paddingTop="10dp">

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/item_order_good_pic"
			android:layout_width="92dp"
			android:layout_height="92dp"
			fresco:actualImageScaleType="fitCenter"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="10dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/item_order_good_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="茶水壶"
				android:textColor="@color/middle_gray"
				android:textSize="12sp"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/item_order_good_spec"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="规格：43*45"
					android:textColor="@color/text_introduce_color"
					android:textSize="12sp"/>

				<TextView
					android:id="@+id/item_order_good_num"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:text="12"
					android:textColor="@color/text_introduce_color"
					android:textSize="12sp"/>
			</RelativeLayout>

		</LinearLayout>
	</LinearLayout>


</LinearLayout>