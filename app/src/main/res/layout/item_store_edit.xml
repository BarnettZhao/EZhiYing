<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:orientation="horizontal">

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical"
		android:background="@color/white"
		android:paddingEnd="12dp"
		android:paddingStart="12dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:text="@string/store_good_integral"
				android:textColor="@color/middle_gray"
				android:textSize="14sp"/>

			<EditText
				android:id="@+id/item_store_edit_integral"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_marginEnd="0dp"
				android:layout_marginStart="20dp"
				android:layout_weight="1"
				android:background="@null"
				android:ellipsize="end"
				android:gravity="center_vertical|end"
				android:inputType="number"
				android:maxLines="1"
				android:textColor="@color/middle_gray"
				android:textSize="14sp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:text="@string/store_good_integral"
				android:textColor="@color/middle_gray"
				android:textSize="14sp"/>
		</LinearLayout>

		<View style="@style/person_split_match"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:text="@string/store_good_stock"
				android:textColor="@color/middle_gray"
				android:textSize="14sp"/>

			<EditText
				android:id="@+id/item_store_edit_stock"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_marginEnd="0dp"
				android:layout_marginStart="20dp"
				android:layout_weight="1"
				android:background="@null"
				android:ellipsize="end"
				android:gravity="center_vertical|end"
				android:inputType="number"
				android:maxLines="1"
				android:textColor="@color/middle_gray"
				android:textSize="14sp"/>
		</LinearLayout>

		<View style="@style/person_split_match"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:text="@string/store_good_postage"
				android:textColor="@color/middle_gray"
				android:textSize="14sp"/>

			<EditText
				android:id="@+id/item_store_edit_postage"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_marginEnd="0dp"
				android:layout_marginStart="20dp"
				android:layout_weight="1"
				android:background="@null"
				android:ellipsize="end"
				android:gravity="center_vertical|end"
				android:inputType="number"
				android:maxLines="1"
				android:textColor="@color/middle_gray"
				android:textSize="14sp"/>

			<TextView
				android:id="@+id/item_store_edit_postage_unit"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginStart="40dp"
				android:drawableEnd="@drawable/list_more"
				android:drawablePadding="5dp"
				android:gravity="center_vertical"
				android:text="@string/store_good_integral"
				android:textColor="@color/middle_gray"
				android:textSize="14sp"/>
		</LinearLayout>

		<View style="@style/person_split_match"/>

		<LinearLayout
			android:id="@+id/item_store_edit_specification_ll"
			android:layout_width="match_parent"
			android:layout_height="44dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:text="@string/store_good_specification"
				android:textColor="@color/middle_gray"
				android:textSize="14sp"/>

			<TextView
				android:id="@+id/item_store_edit_specification"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_marginEnd="0dp"
				android:layout_marginStart="20dp"
				android:layout_weight="1"
				android:drawableEnd="@drawable/list_more"
				android:drawablePadding="5dp"
				android:gravity="center_vertical|end"
				android:textColor="@color/middle_gray"
				android:textSize="14sp"/>
		</LinearLayout>

		<View style="@style/person_split_match"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:text="@string/store_good_limited"
				android:textColor="@color/middle_gray"
				android:textSize="14sp"/>

			<EditText
				android:id="@+id/item_store_edit_limited"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_marginEnd="0dp"
				android:layout_marginStart="20dp"
				android:layout_weight="1"
				android:background="@null"
				android:ellipsize="end"
				android:gravity="center_vertical|end"
				android:inputType="number"
				android:maxLines="1"
				android:textColor="@color/middle_gray"
				android:textSize="14sp"/>
		</LinearLayout>
	</LinearLayout>

	<ImageView
		android:id="@+id/item_store_edit_delete"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:paddingEnd="12dp"
		android:paddingStart="12dp"
		android:background="@color/white"
		android:src="@drawable/store_edit_delete_useable"/>
</LinearLayout>