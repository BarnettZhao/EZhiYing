<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="84dp"
		android:background="@color/white"
		android:orientation="horizontal"
		android:paddingEnd="12dp"
		android:paddingStart="12dp">

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/myqrcode_avatar"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_gravity="center_vertical"
			fresco:failureImage="@drawable/default_avatar_bg"
			fresco:placeholderImage="@drawable/default_avatar_bg"
			fresco:roundAsCircle="true"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginStart="15dp"
			android:gravity="center_vertical"
			android:orientation="vertical">

			<TextView
				android:id="@+id/myqrcode_usercode"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/middle_gray"
				android:textSize="15sp"/>

			<TextView
				android:id="@+id/myqrcode_username"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:textColor="@color/middle_gray"
				android:textSize="15sp"/>
		</LinearLayout>
	</LinearLayout>

	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/myqrcode_qrcode"
		android:layout_width="262dp"
		android:layout_height="262dp"
		android:layout_gravity="center"
		android:layout_marginTop="68dp"
		android:background="@drawable/round_rect_white"
		android:padding="11dp"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:gravity="center"
		android:visibility="gone"
		android:text="@string/personinfo_qrcode_add_friend"
		android:textColor="@color/middle_gray"
		android:textSize="14sp"/>
</LinearLayout>