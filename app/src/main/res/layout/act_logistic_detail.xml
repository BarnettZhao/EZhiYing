<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/logistic_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="物流状态 运输中"
            android:textColor="@color/text_introduce_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/logistic_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="物流状态 运输中"
            android:textColor="@color/text_introduce_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/logistic_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="物流状态 运输中"
            android:textColor="@color/text_introduce_color"
            android:textSize="14sp" />

    </LinearLayout>

    <View style="@style/person_split_match" />

    <View
        style="@style/person_split_match"
        android:layout_marginTop="10dp" />

    <ListView
        android:id="@+id/logistic_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" />
</LinearLayout>