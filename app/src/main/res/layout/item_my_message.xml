<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<TextView
		android:id="@+id/item_message_time"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:gravity="center"
		android:textColor="@color/text_introduce_color"
		android:textSize="12dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="12dp"
		android:layout_marginStart="12dp"
		android:layout_marginTop="12dp"
		android:background="@drawable/round_rect_white"
		android:orientation="vertical"
		android:paddingEnd="10dp"
		android:paddingStart="10dp"
		android:paddingTop="12dp">

		<TextView
			android:id="@+id/item_message_type"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/middle_gray"
			android:textSize="16sp"/>

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/item_message_pic"
			android:layout_width="match_parent"
			android:layout_height="175dp"
			android:layout_marginTop="5dp"/>

		<TextView
			android:id="@+id/item_message_content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="15dp"
			android:layout_marginTop="8dp"
			android:lineSpacingExtra="3dp"
			android:textColor="@color/middle_gray"/>

		<View style="@style/person_split_match"/>

		<TextView
			android:id="@+id/item_message_detail"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:drawableEnd="@drawable/list_more"
			android:gravity="center_vertical"
			android:text="详情"
			android:textColor="@color/middle_gray"
			android:textSize="13sp"/>
	</LinearLayout>
</LinearLayout>