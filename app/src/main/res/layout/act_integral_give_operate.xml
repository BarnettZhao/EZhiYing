<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingEnd="12dp"
        android:paddingStart="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/consumer_service_usercode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/register_usernumber_text"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/give_operate_usernumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:maxLength="7"
                android:textColor="@color/middle_gray"
                android:textSize="14sp"/>
        </LinearLayout>

        <View style="@style/person_split_match" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/personinfo_realname"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/give_operate_realname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />
        </RelativeLayout>

        <View style="@style/person_split_match" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/register_recommend_phone"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/give_operate_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />
        </RelativeLayout>

        <View style="@style/person_split_match" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/activate_integral"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/integral_give_integral"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/give_operate_ingeral"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical|end"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/store_good_integral" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/give_operate_give"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_color"
        android:gravity="center"
        android:text="@string/integral_give"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>