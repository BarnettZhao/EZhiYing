<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:paddingEnd="12dp"
            android:paddingStart="12dp">

            <TextView
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:text="@string/register_recommend_name"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />

            <cn.antke.ezy.widget.ClearEditText
                android:id="@+id/bindinfo_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:textColor="@color/middle_gray"
                android:textColorHint="@color/edit_introduce_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/person_split_margin_left_right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:text="@string/bindinfo_phone_number"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />

            <cn.antke.ezy.widget.ClearEditText
                android:id="@+id/bindinfo_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:inputType="number"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:textColor="@color/middle_gray"
                android:textColorHint="@color/edit_introduce_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/person_split_margin_left_right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:paddingEnd="12dp"
            android:paddingStart="12dp">

            <TextView
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:text="@string/bindinfo_identify_number"
                android:textColor="@color/middle_gray"
                android:textSize="14sp" />

            <cn.antke.ezy.widget.ClearEditText
                android:id="@+id/bindinfo_identify_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:maxLength="18"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:textColor="@color/middle_gray"
                android:textColorHint="@color/edit_introduce_color"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/person_split_margin_left_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="@string/bindinfo_identify"
            android:textColor="@color/middle_gray"
            android:textSize="14sp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bindinfo_identify_front"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            fresco:actualImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/bindinfo_idcard_front" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/bindinfo_identify_front"
            android:textColor="@color/bindindo_text"
            android:textSize="14sp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/bindinfo_identify_back"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            fresco:actualImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/bindinfo_idcard_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/bindinfo_identify_back"
            android:textColor="@color/bindindo_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bindinfo_confirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/primary_color"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
