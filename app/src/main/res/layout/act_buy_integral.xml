<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@color/white">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:gravity="center_vertical"
			android:paddingStart="12dp"
			android:paddingEnd="12dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/integral_all"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>

			<TextView
				android:id="@+id/tv_buy_integral_all"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="end"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>
		</LinearLayout>

		<View style="@style/person_split_match"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:gravity="center_vertical"
			android:paddingStart="12dp"
			android:paddingEnd="12dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/integral_unit"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>

			<TextView
				android:id="@+id/tv_buy_integral_unit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="end"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>
		</LinearLayout>

		<View style="@style/person_split_match"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:gravity="center_vertical"
			android:paddingStart="12dp"
			android:paddingEnd="12dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/current_price"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>

			<TextView
				android:id="@+id/tv_buy_integral_price"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="end"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>
		</LinearLayout>

		<View style="@style/person_split_match"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:gravity="center_vertical"
			android:paddingStart="12dp"
			android:paddingEnd="12dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/buy_integral_num"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>

			<EditText
				android:id="@+id/et_buy_integral_num"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="end"
				android:textColorHint="@color/edit_introduce_color"
				android:paddingStart="20dp"
				android:paddingEnd="0dp"
				android:maxLines="1"
				android:inputType="number"
				android:background="@null"
				android:textSize="15sp"
				android:textColor="@color/middle_gray"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_gravity="bottom"
		android:background="@color/white">

		<TextView
			android:id="@+id/tv_buy_integral_amount"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingStart="12dp"
			android:paddingEnd="12dp"
			android:visibility="invisible"
			android:textSize="15sp"
			android:textColor="@color/middle_gray"/>

		<TextView
			android:id="@+id/tv_buy_integral_buy"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:background="@color/primary_color"
			android:gravity="center"
			android:text="@string/settlement"
			android:textSize="16sp"
			android:textColor="@color/white"/>
	</LinearLayout>
</FrameLayout>