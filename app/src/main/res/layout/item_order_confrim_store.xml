<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
	android:background="@color/white">

	<TextView
		android:id="@+id/tv_confirm_store_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingStart="12dp"
		android:paddingEnd="12dp"
		android:paddingTop="10dp"
		app:paddingEnd="10dp"
		android:textSize="16sp"
		android:textColor="@color/primary_color_text"
		android:text="店铺名称"/>

	<View style="@style/person_split_match"/>

	<com.common.view.ListViewForInner
		android:id="@+id/lvfi_confirm_order_product"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:divider="@color/spilt_line"
		android:dividerHeight="1px"/>

	<View style="@style/person_split_match"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingStart="12dp"
		android:paddingEnd="12dp"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:gravity="end">

		<TextView
			android:id="@+id/tv_confirm_store_subtotal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:textColor="@color/middle_gray"
			android:text="商品小计：2000积分"/>

		<TextView
			android:id="@+id/tv_confirm_store_subintegral"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="6dp"
			android:textSize="14sp"
			android:textColor="@color/middle_gray"
			android:text="运费：20元"/>
	</LinearLayout>
</LinearLayout>